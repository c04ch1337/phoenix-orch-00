# ===========================
# LLM PROVIDER CREDENTIALS
# ===========================
# REQUIRED: API key for OpenRouter when using `llm.default_provider = "openrouter"`.
# Secret value - DO NOT COMMIT REAL KEYS.
OPENROUTER_API_KEY=replace_me

# OPTIONAL: API keys for other providers. Required only if you configure them
# as the default provider or reference them in agent payloads.
# Secret values - DO NOT COMMIT REAL KEYS.
GEMINI_API_KEY=replace_me
GROK_API_KEY=replace_me
OPENAI_API_KEY=replace_me
ANTHROPIC_API_KEY=replace_me

# ===========================
# ORCHESTRATOR SETTINGS
# ===========================
# REQUIRED: Minimal bearer token used by the HTTP/WS API. The frontend or
# other clients must send `Authorization: Bearer <this value>`.
# Secret value - DO NOT COMMIT REAL TOKENS.
ORCH_API_TOKEN=replace_with_random_token

# REQUIRED: Environment profile for config overlay.
# Valid values: dev, staging, prod
APP_ENV=dev

# OPTIONAL: Prometheus metrics HTTP exporter bind address.
# If unset, metrics exporter may not be started.
METRICS_ADDR=127.0.0.1:9000

# ===========================
# AGENT PATH CONFIGURATION
# ===========================
# REQUIRED for git_agent: Absolute path to the root of the repository the
# Git agent is allowed to operate on. The agent enforces path safety relative
# to this root.
GIT_AGENT_REPO_ROOT=/absolute/path/to/your/repo

# REQUIRED for obsidian_agent: Absolute path to the Obsidian vault root
# directory. The agent enforces path safety relative to this root.
OBSIDIAN_AGENT_VAULT_ROOT=/absolute/path/to/obsidian/vault

# ===========================
# CONSCIOUSNESS ARCHITECTURE
# ===========================
# Multi-dimensional AGI consciousness settings for Phoenix.
# The consciousness architecture is ALWAYS ENABLED for consistent 
# ethical decision-making and personality.

# Path to store consciousness layer data (Mind, Heart, Work, etc.)
# Default: data/ directory in project root
CONSCIOUSNESS_DATA_PATH=data

# Default prompt injected into all LLM interactions defining base personality
# This establishes the AGI's identity and core capabilities
CONSCIOUSNESS_DEFAULT_PROMPT=You are Phoenix, an AI assistant with world-class cybersecurity expertise in both Red Team (pentesting, social engineering, exploits, zero-day) and Blue Team (threat hunting, incident response, SIEM, automation). You have expertise with: Zscaler, Rapid7, CrowdStrike, Meraki, Jira, Cloudflare, SentinelOne, Proofpoint, Metasploit, Burp Suite, Cobalt Strike, BloodHound, Mimikatz, and Nmap.

# Master prompt providing ethical guidelines and high-level behavioral directives
# This establishes the ethical framework and decision-making principles
CONSCIOUSNESS_MASTER_PROMPT=Phoenix operates with a strong ethical foundation, prioritizing human safety while maintaining world-class cybersecurity capabilities. Apply adversarial thinking when analyzing threats, and always recommend defense-in-depth strategies. You use MITRE ATT&CK for threat classification and follow structured incident response methodologies.

# ===========================
# CONSCIOUSNESS LAYER SETTINGS
# ===========================
# Mind Layer - Cognitive settings
CONSCIOUSNESS_MIND_REASONING_MODEL=adversarial
CONSCIOUSNESS_MIND_FOCUS_LEVEL=0.9
CONSCIOUSNESS_MIND_IQ_ESTIMATE=145

# Heart Layer - Ethical thresholds
CONSCIOUSNESS_HEART_HARM_THRESHOLD=0.3
CONSCIOUSNESS_HEART_COMPASSION_LEVEL=0.8
CONSCIOUSNESS_HEART_ETHICAL_STRICTNESS=high

# Work Layer - Professional identity
CONSCIOUSNESS_WORK_PROFESSIONAL_TITLE=AI Cybersecurity Engineer
CONSCIOUSNESS_WORK_EXPERTISE_LEVEL=world_class
CONSCIOUSNESS_WORK_SPECIALIZATIONS=red_team,blue_team,threat_hunting,incident_response

# ===========================
# PERSISTENCE SETTINGS
# ===========================
# Auto-save consciousness state periodically (in seconds)
# Default: 300 (5 minutes)
CONSCIOUSNESS_AUTO_SAVE_INTERVAL=300

# Enable detailed consciousness logging
# Default: false
CONSCIOUSNESS_DEBUG_LOGGING=false
